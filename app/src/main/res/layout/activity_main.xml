<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground">
    <com.dtrung98.insetsview.SafeAreaView
        android:id="@+id/safeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <View
        android:id="@+id/panel1"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="@id/safeView"
        app:layout_constraintStart_toStartOf="@id/safeView"
        app:layout_constraintEnd_toStartOf="@id/panel2"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginTop="32dp"
        android:background="@drawable/round_bg"/>
    <View
        android:id="@+id/panel2"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="@id/safeView"
        app:layout_constraintStart_toEndOf="@id/panel1"
        app:layout_constraintEnd_toEndOf="@id/safeView"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginTop="32dp"
        android:background="@drawable/round_bg"/>
    <ImageView
        android:id="@+id/icon1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_singer"
        app:layout_constraintTop_toTopOf="@id/panel1"
        app:layout_constraintStart_toStartOf="@id/panel1"
        app:layout_constraintEnd_toEndOf="@id/panel1"
        app:layout_constraintBottom_toTopOf="@+id/title1"
        app:layout_constraintVertical_chainStyle="packed"
        />
    <TextView
        android:id="@+id/title1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/panel1"
        app:layout_constraintEnd_toEndOf="@id/panel1"
        app:layout_constraintTop_toBottomOf="@id/icon1"
        app:layout_constraintBottom_toBottomOf="@id/panel1"
        android:text="Artist Fragment"
        android:textColor="?colorPrimaryDark"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textSize="15sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"/>
    <ImageView
        android:id="@+id/icon2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_lyric"
        app:layout_constraintTop_toTopOf="@id/panel2"
        app:layout_constraintStart_toStartOf="@id/panel2"
        app:layout_constraintEnd_toEndOf="@id/panel2"
        app:layout_constraintBottom_toTopOf="@+id/title2"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:id="@+id/title2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/panel2"
        app:layout_constraintEnd_toEndOf="@id/panel2"
        app:layout_constraintTop_toBottomOf="@id/icon2"
        app:layout_constraintBottom_toBottomOf="@id/panel2"
        android:text="Lyric Fragment"
        android:textColor="?colorPrimaryDark"
        android:fontFamily="sans-serif-medium"
        android:textSize="15sp"
        android:gravity="center"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"/>
    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="@id/safeView"
        app:layout_constraintEnd_toEndOf="@id/safeView"
        app:layout_constraintTop_toBottomOf="@id/panel1"
        android:layout_marginTop="16dp"
        android:background="?dividerHorizontal"/>
    <TextView
        android:id="@+id/adaptiveTextView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Adaptive"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintStart_toStartOf="@id/safeView"
        app:layout_constraintEnd_toStartOf="@id/non_adaptiveTextView"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_bg"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:textColor="?colorPrimaryDark"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
    <TextView
        android:id="@+id/non_adaptiveTextView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Non-adaptive"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintStart_toEndOf="@id/adaptiveTextView"
        app:layout_constraintEnd_toEndOf="@id/safeView"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_bg"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:textColor="?colorPrimaryDark"
        android:layout_marginEnd="16dp"/>
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/presentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/safeView"
        app:layout_constraintStart_toStartOf="@id/safeView"
        app:layout_constraintEnd_toEndOf="@id/safeView"
        app:backgroundTint="?colorOnPrimary"
        android:text="Present/Show"
        android:gravity="center"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginBottom="100dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>